					<lb xml:id="p3z2"/>pietate et humanitatem
					<lb xml:id="p3z3"/>excellenti d. Heinricho
					<lb xml:id="p3z4"/>Bullingero, ecclesiae
					<lb xml:id="p3z5"/><placeName ref="l587" type="auto_name" cert="high">Tigurinae</placeName> antistiti
					<lb xml:id="p3z6"/>vigilantissimo, domino
					<lb xml:id="p3z7"/>et patrono
